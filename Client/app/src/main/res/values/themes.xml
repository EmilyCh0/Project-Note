<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Note" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/cafeTextView</item>
        <item name="android:buttonStyle">@style/cafeButton</item>
        <item name="android:editTextStyle">@style/cafeEditText</item>
        <item name="android:alertDialogStyle">@style/cafeAlertDialog</item>


    </style>

    <style name="cafeTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/cafe</item>
    </style>
    <style name="cafeButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/cafe</item>
    </style>
    <style name="cafeEditText" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/cafe</item>
    </style>
    <style name="cafeAlertDialog" parent="android:DeviceDefault.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/cafe</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>


</resources>